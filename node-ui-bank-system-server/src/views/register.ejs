<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registro</title>
    <link rel="stylesheet" href="/css/register.css">
    
    <script src="https://kit.fontawesome.com/752d4bf545.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="register-container">

        <!-- Contenedor de errores -->
        <% if (typeof error !== "undefined" && error) { %>
            <div id="form-errors" class="form-errors">
                <p><% if (error) { %>
                    <%= error %>
                <% } %></p>    
            </div>
            <% } %>
            <div id="form-errors" class="form-errors hidden">
                <p></p>
            </div>

        <form class="register-form" action="/auth/register" method="POST">
            <h1>Registro</h1>
            <div class="input-group">
                <label for="name">
                <i class="fas fa-id-card"></i>
                </label>
                <input type="text" name="name" id="name" placeholder="Ingresa tu nombre">
                <p class="error-message hidden">El nombre es requerido</p>
            </div>    
            <div class="input-group">
                <label for="username">
                    <i class="fas fa-user"></i>
                </label>
                <input type="text" name="username" id="username" placeholder="Ingresa tu usuario">
                <p class="error-message hidden">El usuario es requerido</p>
            </div>
            <div class="input-group">
                <label for="email">
                    <i class="fas fa-envelope"></i>
                </label>
                <input type="email" name="email" id="email" placeholder="Ingresa tu correo">
                <p class="error-message hidden">El correo es requerido</p>
            </div>            
            <div class="input-group">
                <label for="password">
                    <i class="fas fa-lock"></i>
                </label>
                <input type="password" name="password" id="password" placeholder="Ingresa tu contrase単a">
                <p class="error-message hidden">La contrase単a es requerida</p>
            </div>
            <div class="input-group">
                <label for="confirm-password">
                    <i class="fas fa-lock"></i>
                </label>
                <input type="password" name="confirm-password" id="confirm-password" placeholder="Confirma tu contrase単a">
                <p class="error-message hidden">Las contrase単as no coinciden</p>
            </div>
            <input class="register-button" type="submit" value="Registrarse">
            <input class="cancel-button" type="button" value="Cancelar">

            <a href="/login">Si ya tienes una cuenta, logueate</a>

            <div id="loading-screen" class="hidden">
                <div class="spinner"></div>
                <p>Cargando...</p>
            </div>
        </form>
    </div>
    <script src="./js/registerUser.js"></script>
</body>
</html>